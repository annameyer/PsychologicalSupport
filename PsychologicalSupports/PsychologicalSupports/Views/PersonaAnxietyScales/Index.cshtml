@using PagedList
@using PagedList.Mvc
@model IEnumerable<PsychologicalSupports.Models.PersonaAnxietyScale>

@{
    ViewBag.Title = "Index";
}

<h2>Шкала личностной тревоги</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.School)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interpersonal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Self_assessment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.General)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interpersonal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Self_assessment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.General)
            </td>

            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.StudentID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Подробнее", "Details", new { id = item.StudentID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))