@model PsychologicalSupports.Models.FamilyAlarmAnalysi

@{
    ViewBag.Title = "Edit";
}

<h2>Изменить</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StudentID)

        <div class="form-group">
            @Html.LabelFor(model => model.Fault, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Fault, new SelectList(PsychologicalSupports.Enums.GetFamilyAlarmAnalysis()), new { @class = "dropdown-list-size" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Anxiety, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Anxiety, new SelectList(PsychologicalSupports.Enums.GetFamilyAlarmAnalysis()), new { @class = "dropdown-list-size" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Stress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Stress, new SelectList(PsychologicalSupports.Enums.GetFamilyAlarmAnalysis()), new { @class = "dropdown-list-size" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.General, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.General, new SelectList(PsychologicalSupports.Enums.GetFamilyAlarmAnalysis()), new { @class = "dropdown-list-size" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернутся", "Index", null, new { @class = "btn btn-primary" })
</div>
