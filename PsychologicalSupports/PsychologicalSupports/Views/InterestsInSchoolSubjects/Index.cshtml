@using PagedList
@using PagedList.Mvc
@model IEnumerable<PsychologicalSupports.Models.InterestsInSchoolSubject>

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    <h2>Отношение к учебным предметам</h2>
    @Html.Partial("~/Views/Partials/_Filter.cshtml")
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Russian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Belorussian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocialScientist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biology)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chemistry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComputerScience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.English)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Russian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Belorussian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Physics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Story)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialScientist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Biology)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Chemistry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComputerScience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.English)
                </td>

                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.StudentID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Подробнее", "Details", new { id = item.StudentID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, search = ViewBag.Search, Class = ViewBag.Class, numberClass = ViewBag.NumberClass, Filter = ViewBag.Filter }))
}