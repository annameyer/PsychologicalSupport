@using PsychologicalSupports.Models
@model IEnumerable<AppUser>

@{
    ViewBag.Title = "ASP.NET Identity";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Учетные записи
    </div>
    <table class="table table-striped">
        <tr>
            <th>Пользователь</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0) {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        } else {
            foreach (AppUser user in Model)
            {
            <tr>
                <td>@user.UserName</td>
                <td>@Html.ActionLink("Удалить", "Delete", new { Id = user.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-primary" })
