@model PsychologicalSupports.Models.ClassroomRelationship

@{
    ViewBag.Title = "Edit";
}

<h2>Изменить</h2>
<h4>Взаимоотношение в классе</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.StudentID)
    <div class="form-group">
        @Html.LabelFor(model => model.StudentID, "Учащийся", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Label((string)ViewBag.StudentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IGS_Sishora, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IGS_Sishora, new SelectList(PsychologicalSupports.Enums.GetSishoraGroupCohesionIndex()), new { @class = "dropdown-list-size" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Sociometry, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Sociometry, new SelectList(PsychologicalSupports.Enums.GetSociometry()), new { @class = "dropdown-list-size" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Вернутся", "Index", null, new { @class = "btn btn-primary" })
</div>
