@using PagedList
@using PagedList.Mvc
@model IEnumerable<PsychologicalSupports.Models.Intellectual_6_Class>

@{
    ViewBag.Title = "Index";
}

<h2>6 класс</h2>
<div>
    @Html.Partial("~/Views/Partials/_Filter.cshtml")
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestResult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AveragePoint)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestResult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AveragePoint)
                </td>

                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.StudentID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Подробнее", "Details", new { id = item.StudentID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
</div>
