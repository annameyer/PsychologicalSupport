        <div class="div-list">
            @Html.DropDownList("NumberClass", new SelectList(PsychologicalSupports.Enums.GetNumberClass()), new { @class = "list" })
        </div>
        <input class="btn btn-info" type="submit" value="Фильтровать" />
    }

    @Html.Partial("~/Views/Partials/_StudentTable.cshtml");
